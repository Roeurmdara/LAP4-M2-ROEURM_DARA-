<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todo">

    <application
        android:allowBackup="true"
        android:icon="@drawable/frame_123_delay_0_03s"
        android:label="@string/app_name"
        android:roundIcon="@drawable/frame_123_delay_0_03s"
        android:supportsRtl="true"
        android:theme="@style/Theme.Todo">
        <activity
            android:name=".activity_add_expense"
            android:exported="false" />
        <!-- Main launcher activity -->
        <!--
            FIX #1: Added android:exported="true".
            This is REQUIRED because this activity has an intent-filter
            and needs to be launched by the Android system's home screen.
        -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
            FIX #2: Added android:exported="false" to other activities.
            This is a security best practice. It explicitly states that these
            activities can ONLY be launched by your own application and not
            by any other app on the device.
        -->
        <activity
            android:name=".AddExpenseActivity"
            android:exported="false" />
        <activity
            android:name=".DetailExpenseActivity"
            android:exported="false" />
    </application>

</manifest>