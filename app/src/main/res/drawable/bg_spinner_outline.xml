<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#1A000000" /> <!-- shadow / overlay -->
            <padding
                android:bottom="1dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="0.5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/layerBackground" />
            <stroke android:width="1dp" android:color="#E0E0E0" />
        </shape>
    </item>
</layer-list>
